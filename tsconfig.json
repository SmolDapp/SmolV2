{
	"compilerOptions": {
		"rootDirs": ["."],
		"baseUrl": ".",
		"paths": {
			"@lib/*": ["packages/lib/*"],

			"@multisafeCommons/*": ["packages/multisafe/components/common/*"],
			"@multisafeIcons/*": ["packages/multisafe/components/icons/*"],
			"@multisafeUtils/*": ["packages/multisafe/utils/*"],
			"@multisafe/*": ["packages/multisafe/*"],

			"@gimmecommon/*": ["packages/gimme/components/common/*"],
			"@gimmeicons/*": ["packages/gimme/components/icons/*"],
			"@gimmeutils/*": ["packages/gimme/utils/*"],
			"@gimmetypes": ["packages/gimme/utils/types"],

			"@smolDesignSystem/*": ["packages/smol/components/designSystem/*"],
			"@smolSections/*": ["packages/smol/components/sections/*"],
			"@smolContexts/*": ["packages/smol/contexts/*"],
			"@smolHooks/*": ["packages/smol/hooks/*"]
		},
		"types": ["bun-types"],
		"target": "esnext",
		"module": "esnext",
		"lib": ["es6", "es7", "esnext", "dom"],
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",
		"allowJs": true,
		"jsx": "preserve",
		"removeComments": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"isolatedModules": true,
		"composite": true,
		"downlevelIteration": true,
		"plugins": [{"name": "next"}]
	},
	"exclude": ["node_modules", "_app"],
	"include": [
		"**/*.css",
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.tsx",
		"packages",
		"public",
		"public/manifest.json",
		"stylelint.config.js",
		"commitlint.config.js",

		"packages/*/postcss.config.js",
		"packages/*/tailwind.config.js",
		"packages/*/next.config.js",
		"packages/*/stylelint.config.js",
		".eslintrc.js",
		".next/types/**/*.ts",
		"jest.config.js",
		"vitest.config.ts",
		"worker/index.js",
		"utils/*/*.json"
	]
}
