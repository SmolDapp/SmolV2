{
	"compilerOptions": {
		"rootDirs": ["."],
		"baseUrl": ".",
		"paths": {
			"@gimmecommon/*": ["packages/gimme/components/common/*"],
			"@gimmeicons/*": ["packages/gimme/components/icons/*"],
			"@gimmeutils/*": ["packages/gimme/utils/*"],
			"@gimmetypes": ["packages/gimme/utils/types"],

			"@primitives/*": ["packages/smol/components/Primitives/*"],
			"@designSystem/*": ["packages/smol/components/designSystem/*"],
			"@sections/*": ["packages/smol/components/sections/*"],
			"@contexts/*": ["packages/smol/contexts/*"],
			"@hooks/*": ["packages/smol/hooks/*"],
			"@common/*": ["packages/smol/components/common/*"],
			"@icons/*": ["packages/smol/components/icons/*"],
			"@disperse/*": ["packages/smol/components/apps/disperse/*"],
			"@migratooor/*": ["packages/smol/components/apps/migratooor/*"],
			"@nftmigratooor/*": ["packages/smol/components/apps/nftmigratooor/*"],
			"@tokenlistooor/*": ["packages/smol/components/apps/tokenlistooor/*"],
			"@safeCreatooor/*": ["packages/smol/components/apps/safeCreator/*"],
			"@stream/*": ["packages/smol/components/apps/stream/*"],
			"@utils/*": ["packages/smol/utils/*"]
		},
		"types": ["bun-types"],
		"target": "esnext",
		"module": "esnext",
		"lib": ["es6", "es7", "esnext", "dom"],
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",
		"allowJs": true,
		"jsx": "preserve",
		"removeComments": false,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"isolatedModules": true,
		"composite": true,
		"downlevelIteration": true,
		"plugins": [{"name": "next"}]
	},
	"exclude": ["node_modules", "_app"],
	"include": [
		"**/*.css",
		"**/*.ts",
		"**/*.tsx",
		"**/*.d.tsx",
		"public",
		"public/manifest.json",
		"stylelint.config",
		"commitlint.config",
		"postcss.config.js",
		"tailwind.config.js",
		"next.config.js",
		"theme.config.js",
		".eslintrc.js",
		".next/types/**/*.ts",
		"jest.config.js",
		"vitest.config.ts",
		"worker/index.js",
		"stylelint.config.js",
		"utils/*/*.json"
	]
}
